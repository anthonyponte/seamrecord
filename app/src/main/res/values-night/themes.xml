<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.SeamRecord" parent="Base.Theme.SeamRecord">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/md_indigo_100</item>
        <item name="colorPrimaryVariant">@color/md_indigo_200</item>
        <item name="colorSecondary">@color/md_orange_200</item>
        <item name="colorSecondaryVariant">@color/md_orange_400</item>
        <item name="android:colorBackground">@color/md_grey_900</item>
        <item name="colorSurface">@color/md_grey_800</item>
        <item name="colorError">@color/md_red_200</item>
        <item name="colorOnPrimary">@color/md_grey_800</item>
        <item name="colorOnSecondary">@color/md_grey_800</item>
        <item name="colorOnBackground">@color/md_white_1000</item>
        <item name="colorOnSurface">@color/md_white_1000</item>
        <item name="colorOnError">@color/md_grey_800</item>
        <item name="android:windowLightStatusBar" >true</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
        <!--Custom-->
        <item name="colorSuccess">@color/md_green_200</item>
        <item name="colorWarning">@color/md_yellow_200</item>
    </style>
</resources>
