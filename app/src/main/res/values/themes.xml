<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.SeamRecord" parent="Base.Theme.SeamRecord" />
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.SeamRecord" parent="Base.Theme.MaterialThemeBuilder">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/md_indigo_800</item>
        <item name="colorPrimaryVariant">@color/md_indigo_900</item>
        <item name="colorSecondary">@color/md_orange_500</item>
        <item name="colorSecondaryVariant">@color/md_orange_900</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/md_grey_50</item>
        <item name="colorSurface">@color/md_grey_200</item>
        <item name="colorError">@color/md_red_700</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/md_white_1000</item>
        <item name="colorOnSecondary">@color/md_black_1000</item>
        <item name="colorOnBackground">@color/md_black_1000</item>
        <item name="colorOnSurface">@color/md_black_1000</item>
        <item name="colorOnError">@color/md_white_1000</item>
        <!--Custom-->
        <item name="colorSuccess">@color/md_green_800</item>
        <item name="colorWarning">@color/md_yellow_800</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.SeamRecord.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.SeamRecord.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.SeamRecord.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.SeamRecord.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.SeamRecord.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.SeamRecord.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.SeamRecord.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.SeamRecord.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.SeamRecord.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.SeamRecord.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.SeamRecord.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.SeamRecord.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.SeamRecord.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyTheme.LargeComponent
        </item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert
        </item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.MyTheme.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.MyTheme.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <style name="Base.Theme.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
    </style>
</resources>
